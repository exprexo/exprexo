{
  "name": "exprexo",
  "version": "1.2.3",
  "description": "hacked javascript freshly served",
  "main": "lib/exprexo.js",
  "bin": {
    "exprexo": "bin/exprexo"
  },
  "preferGlobal": "true",
  "engines": {
    "node": ">=6.0.0",
    "npm": ">=3.8.6"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "commitmsg": "validate-commit-msg",
    "coverage": "istanbul cover tape -- test/index.test.js",
    "changelog": "generate-changelog",
    "lint": " standard --verbose | snazzy",
    "precommit": "npm test",
    "start": "node ./bin/exprexo examples --verbose",
    "tape": "tape test/**/*.test.js | faucet",
    "test": "npm run lint && npm run coverage | tap-spec",
    "watch": "nodemon --exec \"npm test && npm start\"",
    "watch:test": "nodemon --exec \"npm run tape\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exprexo/exprexo.git"
  },
  "keywords": [
    "cli",
    "command",
    "express",
    "exprexo",
    "expresso",
    "server"
  ],
  "author": "Alvaro Pinot <alvaro@neatnait.com> (http://github.com/alvaropinot)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exprexo/exprexo/issues"
  },
  "homepage": "https://github.com/exprexo/exprexo#readme",
  "dependencies": {
    "colors": "^1.1.2",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "nodemon": "^1.11.0",
    "opener": "^1.4.2",
    "portfinder": "^1.0.9",
    "update-notifier": "^1.0.2",
    "yargs": "^6.3.0"
  },
  "devDependencies": {
    "decache": "^4.1.0",
    "faucet": "0.0.1",
    "generate-changelog": "^1.0.2",
    "husky": "^0.11.9",
    "istanbul": "^0.4.5",
    "pre-commit": "^1.1.3",
    "pug": "^2.0.0-beta6",
    "require-all": "^2.0.0",
    "sinon": "^1.17.6",
    "snazzy": "^5.0.0",
    "standard": "^8.5.0",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.2",
    "validate-commit-msg": "^2.8.2"
  }
}
