{
  "name": "exprexo",
  "version": "1.1.0",
  "description": "hacked javascript freshly served",
  "main": "lib/exprexo.js",
  "bin": {
    "exprexo": "bin/exprexo"
  },
  "preferGlobal": "true",
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "start": "node ./bin/exprexo examples --verbose",
    "changelog": "generate-changelog",
    "lint": " standard --verbose | snazzy",
    "precommit": "npm test",
    "commitmsg": "validate-commit-msg",
    "test": "npm run lint",
    "watch": "nodemon --exec \"npm test && npm start\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exprexo/exprexo.git"
  },
  "keywords": [
    "cli",
    "command",
    "express",
    "exprexo",
    "expresso",
    "server"
  ],
  "author": "Alvaro Pinot <alvaro@neatnait.com> (http://github.com/alvaropinot)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/exprexo/exprexo/issues"
  },
  "homepage": "https://github.com/exprexo/exprexo#readme",
  "dependencies": {
    "colors": "^1.1.2",
    "corser": "^2.0.1",
    "express": "^4.14.0",
    "nodemon": "^1.11.0",
    "opener": "^1.4.2",
    "portfinder": "^1.0.9",
    "yargs": "^6.3.0"
  },
  "devDependencies": {
    "generate-changelog": "^1.0.2",
    "husky": "^0.11.9",
    "pre-commit": "^1.1.3",
    "pug": "^2.0.0-beta6",
    "snazzy": "^5.0.0",
    "standard": "^8.5.0",
    "validate-commit-msg": "^2.8.2"
  }
}
